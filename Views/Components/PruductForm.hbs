<form action="/productos" method="POST">
    <div class="form-group">
        <label for="nombre">Nombre del Producto</label>
        <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre del Producto" required>
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea id="descripcion" name="descripcion" class="form-control" placeholder="Descripción"></textarea>
    </div>

    <div class="form-group">
        <label for="precio">Precio</label>
        <input type="number" id="precio" name="precio" class="form-control" placeholder="Precio" required>
    </div>

    <div class="form-group">
        <label for="stock">Cantidad en Stock</label>
        <input type="number" id="stock" name="stock" class="form-control" placeholder="Stock" required>
    </div>

    <div class="form-group">
        <label for="categoria">Categoría</label>
        <input type="text" id="categoria" name="categoria" class="form-control" placeholder="Categoría">
    </div>

    <button type="submit" class="btn btn-success">Agregar Producto</button>
</form>


<div id="response" class="mt-3"></div>

